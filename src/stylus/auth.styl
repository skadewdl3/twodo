.signin,
.signup
  position absolute
  top NAVBAR_HEIGHT
  left 0
  width 100%
  height 100vh - (NAVBAR_HEIGHT + 0.1rem)
  display flex
  align-items center
  justify-content center
  &__header
    font-size 4rem
    font-weight bold
    color PRIMARY_COLOR
  &__form
    width 30%
    transform translateY(-50%)

  &__input
    padding 1rem
    font-size 1.6rem
    width 100%
    border-radius .5rem
    border #ccc solid 1px
    transition all .2s ease-out
    &:focus, &:active
      border PRIMARY_COLOR solid 1px
    &__wrapper
      margin 2rem 0
      width 90%

  &__option
    margin 1rem 0
    font-size 1.3rem
    
  &__error
    margin 1rem 0
    font-size 1.3rem
    color red

  &__cta
    cursor pointer
    padding 1rem 2rem
    font-size 1.6rem
    border-radius .5rem
    background PRIMARY_COLOR
    color #fff
    font-weight bold
    transition all .2s ease-out
    &:active
      transform scale(0.95)