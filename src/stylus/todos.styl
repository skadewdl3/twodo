.todos
  &__wrapper
    position absolute
    top NAVBAR_HEIGHT
    left 0
    width 100%
    height 100vh - (NAVBAR_HEIGHT + 0.1rem)
    display flex
    align-items center
    justify-content center

  &__categories
    display flex
    margin-bottom 1rem
  
  &__category
    font-size 1.6rem
    margin 0 1rem
    cursor pointer
    &:first-child
      margin-left 0

    &--active
      border-bottom 2px solid PRIMARY_COLOR
  &__container
    background #fff
    width 50%
    height 90%
    +tablet()
      width 70%
    +mobile()
      width 90%
  &__header
    font-size 4rem
    font-weight bold
    color PRIMARY_COLOR
    display flex
    align-items center
    justify-content space-between

.todo
  display flex
  padding 1rem
  margin 2rem 0
  font-size 2rem
  border #ccc solid 1px
  border-radius .5rem
  input
    width 100%
    font-size 2rem
  &:hover, &:active
    border PRIMARY_COLOR solid 1px
    cursor pointer
  
  &__controls
    display flex
    align-items center
    span
      margin auto 1rem
      &:last-child
        margin-right 0

  &__index
    margin-right 1rem